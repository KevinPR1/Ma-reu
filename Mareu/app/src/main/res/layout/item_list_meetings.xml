<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    android:id="@+id/item_list"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:clickable="true"
    android:focusable="true">


    <ImageView
        android:id="@+id/item_list_meeting_avatar"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:srcCompat="@tools:sample/avatars" />



    <TextView
        android:id="@+id/Sujet"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        tools:text="RÃ©union A - 14h00 - Mario"
        android:textStyle="bold"
        android:textAppearance="@style/AppTheme.itemtitletext"
        app:layout_constraintStart_toEndOf="@id/item_list_meeting_avatar"
        app:layout_constraintTop_toTopOf="@id/item_list_meeting_avatar"

      />

    <TextView
        android:id="@+id/hour"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        tools:text="luc@lamzone.com,adrien@lamzone.com,"
        android:textStyle="normal"
        app:layout_constraintStart_toEndOf="@id/item_list_meeting_avatar"
        app:layout_constraintBottom_toBottomOf="@id/item_list_meeting_avatar"

        />



    <ImageButton
        android:id="@+id/item_list_meeting_delete_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:background="@null"
        app:layout_constraintBottom_toBottomOf="@+id/item_list"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/item_list"
        app:srcCompat="@drawable/ic_delete_button" />



</android.support.constraint.ConstraintLayout>